version: '3.8'

services:
  drawio:
    image: jgraph/drawio:latest
    container_name: drawio
    ports:
      - "{{ drawio_port }}:8080"
    environment:
      - PUBLIC_DNS={{ domain_name }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    read_only: false
    tmpfs:
      - /tmp:noexec,nosuid,size=128m
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

networks:
  default:
    name: drawio_network